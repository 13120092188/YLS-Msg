/* miniprogram/pages/chatRecordByTime/chatRecordByTime.wxss */

.log-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.log-item-name {
  font-size: 10px;
  color: gray;
  margin: 10rpx;
}
.log-item-msg-Y {
  font-size: 15px;
  color: gray;
  margin: 10rpx;
}
.log-item-msg-S {
  font-size: 15px;
  color: gray;
  margin: 10rpx;
}
.log-item-msg-SL {
  font-size: 15px;
  color: gray;
  margin: 10rpx;
  text-align: left;
}

.block-Y{
  margin-top: 10rpx;
  height:fit-content;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items:flex-start;
  transition: all 300ms ease;
}

.block-S{
  margin-top: 10rpx;
  height:fit-content;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items:flex-end;
  transition: all 300ms ease;
}

.user-head-Y {
  width: 90rpx;
  height: 90rpx;
  margin-top: 10rpx;
  border-radius: 10%;
  background-size: cover;
  /* background-color: white; */
}
.user-head-S {
  width: 90rpx;
  height: 90rpx;
  margin-top: 10rpx;
  border-radius: 10%;
  background-size: cover;
  /* background-color: white; */
}

.view-msg-Y {
  text-align: left;
  width: 650rpx;
  margin-top: 0rpx;
  display: flex;
  flex-direction: column;
}

.view-msg-S {
  text-align: right;
  width: 650rpx;
  margin-top: 0rpx;
  display: flex;
  flex-direction: column;
}

.doSearch {
  position:fixed; bottom:0;
  display: flex;
  flex-direction:row;
  border:1px solid #aaaaaa;
  border-radius: 5px;
  width: 100%;
  background-color : rgba(197, 189, 189, 0.9) ;
  
}
.doSearch button {
 border : 1px solid #8edabf85 ;
 width : 50% ;
 height : 40px ;
 background-size: 100% 110%;
 background-color : rgba(102, 88, 88, 0.5) ;
 line-height : 40px ;
 font-size : 14px ;
}
